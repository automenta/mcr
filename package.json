{
  "name": "model-context-reasoner",
  "version": "1.0.0",
  "description": "Model Context Reasoner (MCR): Connects Large Language Models (LLMs) with formal logic reasoners (Prolog) for advanced AI applications.",
  "main": "mcr.js",
  "bin": {
    "mcr-cli": "./cli.js"
  },
  "scripts": {
    "start": "node mcr.js",
    "demo": "node demo.js",
    "chat": "node chat.js",
    "chat:tui": "node cli.js chat",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "generate-examples": "node ./generate_example.js",
    "generate-ontology": "node ./generate_ontology.js"
  },
  "keywords": [
    "llm",
    "prolog",
    "reasoning",
    "ai",
    "api",
    "nlp",
    "logic programming"
  ],
  "author": "Unknown",
  "license": "MIT",
  "type": "commonjs",
  "files": [
    "mcr.js",
    "cli.js",
    "chat.js",
    "demo.js",
    "src/",
    "ontologies/",
    "strategies/",
    "README.md",
    ".env.example",
    "LICENSE",
    "generate_example.js",
    "generate_ontology.js",
    "src/util/generatorUtils.js",
    "prompts/"
  ],
  "repository": {
    "type": "git",
    "url": "http://dumb.ai"
  },
  "bugs": {
    "url": "http://dumb.ai/issues"
  },
  "homepage": "http://dumb.ai#readme",
  "dependencies": {
    "@langchain/anthropic": "^0.3.24",
    "@langchain/community": "^0.3.48",
    "@langchain/core": "^0.3.62",
    "@langchain/google-genai": "^0.2.14",
    "@langchain/openai": "^0.5.18",
    "axios": "^1.10.0",
    "chalk": "^4.1.2",
    "commander": "^14.0.0",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "ink": "^6.0.1",
    "ink-text-input": "^6.0.0",
    "inquirer": "^8.2.0",
    "langchain": "^0.3.29",
    "react": "^19.1.0",
    "sqlite3": "^5.1.7",
    "tau-prolog": "^0.3.4",
    "uuid": "^11.1.0",
    "winston": "^3.0.0",
    "ws": "^8.18.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/register": "^7.27.1",
    "@eslint/js": "^9.30.1",
    "babel-jest": "^30.0.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "supertest": "^7.1.3"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/old/test/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/old/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!yargs|uuid|chalk)/"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
